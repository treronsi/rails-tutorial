<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>kakeibo</title>
	</head>
	<body>
		 <%= form_with model: @book, local: true , method: "patch" do |f| %>
		<h1>edit</h1>
		<div class  = "form-group">
			<label>year</label>
			<%=f.number_field :year, class: "form-control" %>
		</div>
		<div class  = "form-group">
			<label>month</label>
			<%= f.number_field :month, class: "form-control" %>
		</div>
		<div class  = "form-group">
			<label>category</label>
			<%= f.select :inout, [["income",1],["expenditure",2]],{}, {class: "form-control" }%>
		</div>
		<div class  = "form-group">
			<label>subject</label>
			<%= f.text_field :category, class: "form-control" %>
		</div>
		<div class  = "form-group">
			<label>amount</label>
			<%= f.number_field :amount, class: "form-control" %>
		</div>
		 <%= link_to 'return' , books_path , class: "btn btn-secondary"%>
		<%= f.submit "registration", class: "btn btn-primary" %>
		
	</body>
	<% end %>